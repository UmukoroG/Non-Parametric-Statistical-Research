<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>Available Cars</h1>
    <div>
        <button  class="btn btn-success"><a href="/cars/new">Add a Car</a></button>
    </div>
    <% for (let car of cars){%>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4"> <!--check again-->
                <%if(car.images.length) {%>
                <img class="img-fluid" alt="" src="<%=car.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/dkpt9dftt/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= car.title %> </h5>
                    <p class="card-text"><%= car.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= car.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/cars/<%=car._id%>">View <%=car.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const cars = { features: <%- JSON.stringify(cars) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>

